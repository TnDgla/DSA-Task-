class Solution {
    public long minimumSteps(String s) {
        long z = 0;
        long ans = 0;
        for(int i = s.length()-1;i>=0;i--){
            if(s.charAt(i)=='0'){
                z++;
            }
            else{
                ans+=z;
            }
        }
        return ans;
    }
}
