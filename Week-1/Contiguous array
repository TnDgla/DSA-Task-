class Solution {
  public int findMaxLength(int[] nums) {
    int ans = 0;
    int pre = 0;
    Map<Integer, Integer> map = new HashMap<>();
    map.put(0, -1);
    for (int i = 0; i < nums.length; ++i) {
      pre += nums[i] == 1 ? 1 : -1;
      if (map.containsKey(pre)){
        ans = Math.max(ans, i - map.get(pre));
      }
      else
      {
        map.put(pre, i);
      }
    }
    return ans;
  }
}
