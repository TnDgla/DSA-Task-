class Solution {
    public int findContentChildren(int[] g, int[] s) {
        Arrays.sort(g);
        Arrays.sort(s);
        
        int childIdx = 0;
        int cookieIdx = 0;

        while (childIdx < g.length && cookieIdx < s.length) {
            if (s[cookieIdx] >= g[childIdx]) {
                childIdx++;
            }
            cookieIdx++;
        }

        return childIdx;
    }
}
