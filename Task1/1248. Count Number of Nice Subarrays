class Solution {
    public int numberOfSubarrays(int[] nums, int k) {
        int n = nums.length;
        int count = 0;
        int j = 0;
        int ans = 0; 
        for(int i = 0;i < nums.length; i++){
            if(nums[i]%2 == 1){
                k--;
                count = 0;
            }
            while(k == 0){
                count++;
                k += nums[j++]%2 == 0 ? 0 : 1;
            }
            ans += count;
        }
        return ans;
    }
}
