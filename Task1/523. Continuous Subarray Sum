class Solution {
    public boolean checkSubarraySum(int[] nums, int k) {
        int n = nums.length;
        Map<Integer, Integer> map = new HashMap<>();
        int sum = 0;
        map.put(0, -1);
        for(int i = 0; i < n; i++){
            sum += nums[i];
            int rem = sum % k;
            System.out.println(map);
            if(map.containsKey(rem)){
                if(i - map.get(rem) > 1){
                    return true;
                }
            }
            else{
                map.put(rem, i);
            }
        }
        return false;
    }
}
