class Solution {
    public int pivotIndex(int[] nums) {
        int sum = 0;
        int left = 0;
        for(int i : nums){
            sum += i;
        }
        int n = nums.length;
        for(int i = 0; i < n; left += nums[i++]){
            if(left * 2 == sum - nums[i]){
                return i;
            }
        }
        return -1;
    }
}
