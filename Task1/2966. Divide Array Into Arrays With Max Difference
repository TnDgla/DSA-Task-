class Solution {
    public int[][] divideArray(int[] nums, int k) {
        Arrays.sort(nums);
        int n = nums.length;
        int x = 0;
        int ans[][] = new int[n / 3][3];
        for(int i = 0; i < n; i += 3){
            if((nums[i + 2] - nums[i]) > k){
                return new int[0][0];
            }
            else{
                ans[x][0] = nums[i];
                ans[x][1] = nums[i + 1];
                ans[x][2] = nums[i + 2];
                x++;
            } 
        }
        return ans;
    }
}
